# ===========================================
# CONFIGURATION SÉCURISÉE - TANAYE BACKEND
# ===========================================
# 
# Ce fichier contient les variables d'environnement nécessaires
# pour sécuriser l'application. Copiez ce fichier vers .env.local
# et remplissez les valeurs réelles.
#
# ⚠️  IMPORTANT: Ne jamais commiter le fichier .env.local !

# ===========================================
# CONFIGURATION DE BASE
# ===========================================
SERVER_PORT=9999

# ===========================================
# BASE DE DONNÉES (OBLIGATOIRE)
# ===========================================
# URL de connexion à la base de données PostgreSQL
DATABASE_URL=jdbc:postgresql://localhost:5432/tanaye_dev

# Identifiants de connexion à la base de données
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here

# ===========================================
# JWT AUTHENTIFICATION (OBLIGATOIRE)
# ===========================================
# Secret JWT - DOIT être d'au moins 32 caractères
# Générez une clé sécurisée avec: openssl rand -base64 32
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_chars

# Durée d'expiration du token JWT en millisecondes (défaut: 24h)
JWT_EXPIRATION=86400000

# ===========================================
# SUPABASE (OBLIGATOIRE)
# ===========================================
# URL du projet Supabase
SUPABASE_PROJECT_URL=https://your-project.supabase.co

# Clé API Supabase (service_role)
SUPABASE_API_KEY=your_supabase_service_role_key_here

# Nom du bucket Supabase
SUPABASE_BUCKET=your_bucket_name

# ===========================================
# CONFIGURATION HIBERNATE (OPTIONNEL)
# ===========================================
# Stratégie de création des tables (update, create, validate, none)
HIBERNATE_DDL_AUTO=update

# Afficher les requêtes SQL (true/false)
HIBERNATE_SHOW_SQL=true

# ===========================================
# CONFIGURATION HIKARICP (OPTIONNEL)
# ===========================================
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1200000

# ===========================================
# UPLOAD DE FICHIERS (OPTIONNEL)
# ===========================================
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=60MB
STORAGE_ROOT=uploads

# ===========================================
# SÉCURITÉ (OPTIONNEL)
# ===========================================
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# ===========================================
# ACTUATOR (OPTIONNEL)
# ===========================================
ACTUATOR_ENDPOINTS=health,info
ACTUATOR_HEALTH_DETAILS=never
